# Pure Sound Environment Configuration
# Copy this file to .env and modify as needed

# FFmpeg Configuration
FFMPEG_LOGLEVEL=error
FFMPEG_THREADS=4

# Application Settings
COMPRESS_AUDIO_FORMAT=opus
COMPRESS_AUDIO_CONTENT_TYPE=speech
COMPRESS_AUDIO_CHANNELS=1
COMPRESS_AUDIO_MAX_FILE_SIZE_MB=500
COMPRESS_AUDIO_ARNNDN_MODEL=/usr/local/share/ffmpeg/arnndn-models/bd.cnr.mdl
COMPRESS_AUDIO_CUSTOM_MODELS_DIR=./models

# Cloud Storage Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_BUCKET_NAME=your-bucket-name
AWS_DEFAULT_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Development Configuration
DEBUG=False
DEV_MODE=False

# Database (if needed for future features)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pure_sound
DB_USER=postgres
DB_PASSWORD=your_password

# Redis Configuration (for job queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16